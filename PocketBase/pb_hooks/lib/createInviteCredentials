function createInviteCredentials(
  {
    inviteIdLength = 12,
    passwordLength = 24,
  } = {},
) {
  const inviteId = $security.randomString(inviteIdLength);
  const password = $security.randomString(passwordLength);
  return {
    inviteId,
    password,
    inviteCode: `${inviteId}.${password}`,
  };
}

function setRegistrantCoreFields(
  record,
  {
    eventId,
    name,
    inviteId,
    password,
  },
) {
  record.setPassword(password);
  record.set("invite_id", inviteId);
  record.set("event", eventId);
  record.set("name", name);
}
